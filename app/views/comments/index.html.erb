  <script>
    // Function to handle form submission
    document.getElementById("comment-form").addEventListener("submit", function(event) {
      event.preventDefault(); // Prevent form submission
      
      // Get form values
      var name = document.getElementById("name").value;
      var comment = document.getElementById("comment").value;
      
      // Create comment object
      var newComment = {
        name: name,
        content: comment
      };
      
      // Send comment data to the server
      fetch("/comments", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "X-CSRF-Token": document.querySelector('meta[name="csrf-token"]').getAttribute('content')
        },
        body: JSON.stringify({ comment: newComment })
      })
      .then(response => response.json())
      .then(savedComment => {
        // Display the saved comment
        displayComment(savedComment);
        
        // Clear form fields
        document.getElementById("name").value = "";
        document.getElementById("comment").value = "";
      })
      .catch(error => {
        console.error("Error:", error);
      });
    });
    
    // Function to display a comment in the comment display area
    function displayComment(comment) {
      var commentElement = document.createElement("div");
      commentElement.innerHTML = "<strong>" + comment.name + "</strong><br>" + comment.content + "<hr>";
      document.getElementById("comment-display").appendChild(commentElement);
    }
  </script>

